<h1>旅の中でやる事</h1>
<%# <h1>Tasks#index</h1> %>
<%# <p>Find me in app/views/tasks/index.html.erb</p> %>
<table class="table table-striped">
  <tr>
    <th>ID</th><th>タイトル</th><th>詳細</th><th></th><th></th><th></th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task_path(task), class: "btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-success" %></td>
    <td><%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'You sure?' }, class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to 'ToDoの作成', new_task_path, class: "btn btn-primary" %></p>
