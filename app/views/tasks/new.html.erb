<div style="width: 300px;">
  <%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, size: 50 %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
    <%= f.submit '作成' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', tasks_url %></p>
